    "@tanstack/react-query": "^5.90.21",
    "@tanstack/react-store": "^0.9.1",
    "@tanstack/store": "^0.9.1",
    "@types/node": "^22.10.10",
    "@types/react": "^19.2.14",
    "@types/ws": "^8.5.13",
    "react": "^19.2.4",
    "tsup": "^8.5.1",
    "typescript": "^5.7.3",
    "vitest": "^2.0.0",
    "wrangler": "^4.67.0",
    "ws": "^8.18.0"
  }
