{
  "name": "tanstack-realtime",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build -w @tanstack/realtime && npm run build -w @tanstack/realtime-preset-node && npm run build -w @tanstack/realtime-adapter-centrifugo",
