{
  "name": "tanstack-realtime",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "test": "node --experimental-vm-modules node_modules/.bin/jest --runInBand",
    "test:watch": "node --experimental-vm-modules node_modules/.bin/jest --watch"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.10",
    "@types/ws": "^8.5.13",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.3",
    "ws": "^8.18.0"
  },
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/packages"
    ],
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1",
      "^@tanstack/realtime-client$": "<rootDir>/packages/realtime-client/src/index.ts",
      "^@tanstack/realtime-server$": "<rootDir>/packages/realtime-server/src/index.ts"
    },
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "useESM": true,
          "tsconfig": {
            "module": "ES2022",
            "moduleResolution": "bundler",
            "target": "ES2022"
          }
        }
      ]
    },
    "testMatch": [
      "**/__tests__/**/*.test.ts"
    ]
  }
}
